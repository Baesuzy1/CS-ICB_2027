

```java
// Class for Student
class Student {
    private int id;
    private String name;
    private int grade;

    // Constructor
    public Student(int id, String name, int grade) {
        this.id = id;
        this.name = name;
        this.grade = grade;
    }

    // Getters and Setters
    public int getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public int getGrade() {
        return grade;
    }

    public void setGrade(int grade) {
        this.grade = grade;
    }

    // Display Student details
    public void displayStudent() {
        System.out.println("ID: " + id + ", Name: " + name + ", Grade: " + grade);
    }
}

// Class for Teacher
class Teacher {
    private int id;
    private String name;
    private String subject;

    // Constructor
    public Teacher(int id, String name, String subject) {
        this.id = id;
        this.name = name;
        this.subject = subject;
    }

    // Display Teacher details
    public void displayTeacher() {
        System.out.println("ID: " + id + ", Name: " + name + ", Subject: " + subject);
    }
}

// Main Class for School Management System
public class SchoolManagementSystem {
    public static void main(String[] args) {
        // Creating Students
        Student student1 = new Student(1, "Chaithanya", 10);
        Student student2 = new Student(2, "Ravi", 12);

        // Creating Teachers
        Teacher teacher1 = new Teacher(101, "Mrs. Sharma", "Mathematics");
        Teacher teacher2 = new Teacher(102, "Mr. Rao", "Science");

        // Displaying Details
        System.out.println("Student Details:");
        student1.displayStudent();
        student2.displayStudent();

        System.out.println("\nTeacher Details:");
        teacher1.displayTeacher();
        teacher2.displayTeacher();
    }
}
```

